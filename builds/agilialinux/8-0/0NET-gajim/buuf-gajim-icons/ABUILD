#-ruler---|--------------------------------------------------------------------------|
longdesc=("This is a theme/iconset for Gajim by OxayotlTheGreat. All credit for these wonderful icons goes to Mattahan : http://mattahan.deviantart.com ! License: Creative Commons by-nc-sa. Homepage: http://gnome-look.org/content/show.php/Theme+Buuf+for+Gajim?content=103768"
)

source=("http://perso.ens-lyon.fr/jeanalexandre.angles_dauriac/buuf_for_gajim.tar.gz")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="x11-themes themes"

#dependencies only needed to build package
build_deps=""

provides=""
