#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
echo ""
}

build()
{
go_src_dir
burn_patches
}


#ran after function build() 
#после сборки
after_build()
{
echo ""

go_src_dir

mkdir -p ${pkgdir}/usr/share/gajim/data/iconsets/ 
cp -rv ./iconset/buuf ${pkgdir}/usr/share/gajim/data/iconsets/ || exit 1
}
