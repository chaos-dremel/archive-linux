#-ruler---|--------------------------------------------------------------------------|
longdesc=("Легковесный менеджер буфера обмена на GTK+"
)

source=("http://downloads.sourceforge.net/project/parcellite/parcellite/parcellite-${pkgver/_/}/parcellite-${pkgver/_/}.tar.gz")
