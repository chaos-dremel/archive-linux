pkgname=libattica
pkgver=0.4.2
pkgbuild=1
arch=('auto')

shortdesc=('A library to access Open Collaboration Service providers')
#longdesc=('A library to access Open Collaboration Service providers')

tags=('libs kde-base')

source=("http://download.kde.org/stable/attica/attica-${pkgver}.tar.bz2")

BUILD_SYSTEM='cmake'
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr \
	-DLIB_SUFFIX=$LIBDIRSUFFIX \
	-DCMAKE_SKIP_RPATH=ON"
INSTALL_KEYS="DESTDIR=$pkgdir"
