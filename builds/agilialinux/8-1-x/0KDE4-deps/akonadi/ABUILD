pkgname=akonadi
pkgver=1.11.0
pkgbuild=1
arch=('auto')


shortdesc=('Akonadi is a PIM layer, which provides an asynchronous API to access all kind of PIM data (e.g. mails, contacts, events, todos etc.)')

#shortdesc=('akonadi (PIM storage service)')
#longdesc=('akonadi is an extensible cross-desktop storage service for PIM data and meta data providing concurrent read, write, and query access. It will provide a unique desktop wide object identification and retrieval. Homepage: http://www.kdepim.org/akonadi/')


tags=('kde-base libs')
source=("ftp://ftp.kde.org/pub/kde/stable/${pkgname}/src/${pkgname}-${pkgver}.tar.bz2")

BUILD_SYSTEM='cmake'
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr \
	-DLIB_SUFFIX=$LIBDIRSUFFIX \
	-DCMAKE_BUILD_TYPE=Release \
	-DCMAKE_SKIP_RPATH=ON"
INSTALL_KEYS="DESTDIR=$pkgdir"
