build()
{
go_src_dir
burn_patches

mkdir -p $pkgdir/usr/share/wallpapers/mint
mkdir -p ${pkgdir}/usr/doc/${pkgname}-${pkgver}


mintnv (){
 cd $pkgdir/usr/share/wallpapers/mint
 # extra walls
 cp -r $srcdir/mint-backgrounds-${mname}/usr/share/backgrounds/linuxmint-${mname}/ ./${mver}-${mname/-extra/}/
 mv ./${mver}-${mname/-extra/}/Credits ${pkgdir}/usr/doc/${pkgname}-${pkgver}/Credits-${mver}-${mname/-extra/}
 # del walls 4 LinuxMint
 find ./ -type f -name gelsan* -exec rm -v {} ";"
 find ./ -type f -name linux_mint* -exec rm -v {} ";"
 find ./ -type f -name *${mname}*.*g -exec rm -v {} ";"
 # copyright
 cat $srcdir/mint-backgrounds-${mname}/debian/copyright > ${pkgdir}/usr/doc/${pkgname}-${pkgver}/copyright
}


