#custom_opts: skip_validate skip_gendeps no_postperm no_strip
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой
before_build()
{
echo ""
}

build()
{
go_src_dir
burn_patches
}


#ran after function build() 
#после сборки
after_build()
{
echo ""

go_src_dir

mkdir -p $pkgdir/usr/share/icons/Buuf
cp -r ./* $pkgdir/usr/share/icons/Buuf || exit 1

#sed -i 's|Name=Buuf 2.30|Name=Buuf|' $pkgdir/usr/share/icons/Buuf/index.theme || exit 1
}
