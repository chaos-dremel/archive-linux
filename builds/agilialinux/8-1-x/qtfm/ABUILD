BUILD_SYSTEM="qmake"
BUILD_KEYS="*.pro PREFIX=/usr"

#ran after function build() 
#после сборки
after_build()
{
if [ -d ${pkgdir}/usr/share/doc/${pkgname} ]; then
 mv -vn ${pkgdir}/usr/share/doc/${pkgname}/* ${pkgdir}/usr/doc/${pkgname}-${pkgver}
 rm -rf ${pkgdir}/usr/share/doc/
fi
}
