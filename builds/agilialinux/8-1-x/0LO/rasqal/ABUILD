pkgname=rasqal
pkgver=0.9.30
pkgbuild=1
arch=('auto')


shortdesc=('Rasqal RDF Query Library')
#shortdesc=('rasqal (RDF parsing library)')
#longdesc=('Rasqal is a library providing full support for querying Resource Description Framework (RDF) including parsing query syntaxes, constructing the queries, executing them and returning result formats. It currently handles the RDF Data Query Language (RDQL) and SPARQL Query language. Homepage: http://librdf.org/')


tags=('dev-libs libs')

source=(http://download.librdf.org/source/${pkgname}-${pkgver}.tar.gz)

BUILD_SYSTEM='autotools'
BUILD_KEYS="--prefix=/usr \
--disable-static \
--enable-release \
--libdir=/usr/lib$LIBDIRSUFFIX \
--with-raptor=system \
--build=$ARCH-slackware-linux"
INSTALL_KEYS="DESTDIR=$pkgdir"
