build()
{
go_src_dir
burn_patches

cd "$pkgdir"
install -dm755 "usr/share/apps/plasma/plasmoids/${pkgname/plasmoid-/}"

cp -Rv "${srcdir}/${pkgname/plasmoid-//}/"{contents,metadata.desktop} "usr/share/apps/plasma/plasmoids/${pkgname/plasmoid-/}"	
install -Dm644 "${srcdir}/${pkgname/plasmoid-//}"/metadata.desktop "usr/share/kde4/services/plasma-applet-${pkgname/plasmoid-/}.desktop"

find . -name .*~ -type f -exec rm {} \;

#FILEC="usr/share/apps/plasma/plasmoids/simpleclock/contents/code/ClockWidget.qml"
#[ ! -d ${pkgdir}/usr/doc/${pkgname}-${pkgver} ] && mkdir -p ${pkgdir}/usr/doc/${pkgname}-${pkgver}
