#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=btsync
pkgver=1.2.82
pkgbuild=1


#arch=('auto')
if [[ "`uname -m`" == "x86_64" ]]; then
 arch="x86_64"
 source=("http://download-lb.utorrent.com/endpoint/btsync/os/linux-glibc23-x64/track/stable")
else
 arch="i686"
 source=("http://download-lb.utorrent.com/endpoint/btsync/os/linux-glibc23-i386/track/stable")
fi


shortdesc="BitTorrent Sync - automatically sync files via secure, distributed technology"
#longdesc=(""
#)


patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="network www-client"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep=""
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into ${pkgdir}/usr/doc/${pkgname}-${pkgver} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip no_ccache
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой.
#before_build()
#{
#
#}

build()
{
go_src_dir
burn_patches

install -Dm755 btsync ${pkgdir}/usr/bin/btsync

# generate and install system-wide configand systemd unit
mkdir -p ${pkgdir}/etc
./btsync --dump-sample-config | sed 's:/home/user/\.sync:/var/lib/btsync:g' > ${pkgdir}/etc/btsync.conf
}


