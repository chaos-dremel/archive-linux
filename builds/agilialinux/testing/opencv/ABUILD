#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------


BUILD_SYSTEM="cmake"
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr \
-DCMAKE_BUILD_TYPE=RELEASE \
-DLIB_SUFFIX=${LIBDIRSUFFIX} \
-DLIBDIR=/usr/lib${LIBDIRSUFFIX} \
-DWITH_XINE=ON \
-DWITH_GSTREAMER=OFF \
-DBUILD_TESTS=OFF \
-DENABLE_SSE=ON \
-DENABLE_SSE2=ON \
-DENABLE_SSE3=OFF \
-DENABLE_SSSE3=OFF \
-DENABLE_SSE41=OFF \
-DENABLE_SSE42=OFF \
-DBUILD_EXAMPLES=OFF \
-DWITH_QT=ON \
-DWITH_QT_OPENGL=ON \
-DWITH_UNICAP=OFF \
-DWITH_PVAPI=OFF \
-DWITH_OPENNI=OFF \
-DWITH_TBB=OFF \
-DWITH_IPP=OFF \
-DWITH_CUDA=OFF \
-D BUILD_PYTHON_SUPPORT=ON \
-DUSE_FAST_MATH=ON \
-DWITH_V4L=OFF \
../"

if [ "${ARCH}" == "x86_64" ]; then
    BUILD_KEYS=${BUILD_KEYS/ENABLE_SSE3=OFF/ENABLE_SSE3=ON}
fi

