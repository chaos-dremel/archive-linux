#ABUILD created by/создан: NK, nk-man at yandex.ru 
#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=audacious-plugins-legacy
pkgver=3.2.4
pkgbuild=1
arch=('auto')

shortdesc="a collection of plugins for Audacious to support additional media formats"
#longdesc=(""
#)

source=("http://distfiles.audacious-media-player.org/audacious-plugins-${pkgver}.tar.bz2")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="xapps media-sound"

#dependencies only needed to build package
build_deps= #"mpg123 audacious-legacy ffmpeg"

provides=""
conflicts=""

adddep=""
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into ${pkgdir}/usr/doc/${pkgname}-${pkgver} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip no_ccache
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой.
before_build()
{
go_src_dir

sed 's/libavcore >= 0.12.0//g' -i configure || exit 1 # FS#23549

[[ $ARCH == x86_64 ]] && extraopts='' || extraopts='--disable-sse2'
}

BUILD_SYSTEM="autotools"

BUILD_WORD="LDFLAGS=\"$SLKLDFLAGS\" CFLAGS=\"$SLKCFLAGS\" CXXFLAGS=\"$SLKCFLAGS\" ./configure" # --help"

BUILD_KEYS="--prefix=/usr \
--sysconfdir=/etc \
--localstatedir=/var \
--libdir=/usr/lib${LIBDIRSUFFIX} \
--disable-static \
--mandir=/usr/man \
--program-prefix= \
--program-suffix= \
--docdir=/usr/doc/${pkgname}-${pkgver} \
--enable-mp3 \
--enable-ffaudio \
--disable-gtk3 \
--disable-pulse \
--disable-adplug \
--disable-projectm \
--disable-oss \
$extraopts"

#--enable-amidiplug \

INSTALL_KEYS="DESTDIR=$pkgdir"

