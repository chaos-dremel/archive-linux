# Package metadata
pkgname=NetworkManager-pptp
pkgver=0.9.8.2
pkgbuild=2
arch="auto"

# Package description
shortdesc=("NetworkManager PPTP plugin")
longdesc=("NetworkManager PPTP plugin. Adds support for VPN connections.")

# Source URL
source=("http://ftp.gnome.org/pub/GNOME/sources/NetworkManager-pptp/0.9/NetworkManager-pptp-${pkgver}.tar.xz")

# Tags
tags="xapps net-misc"

# Manually-added dependencies
adddep="pptp ppp>=2.4.5"

# Build system
BUILD_SYSTEM="autotools"
BUILD_KEYS="--prefix=/usr \
--bindir=/usr/bin \
--sbindir=/usr/sbin \
--libexecdir=/usr/lib${LIBDIRSUFFIX}/networkmanager \
--includedir=/usr/include \
--mandir=/usr/man \
--infodir=/usr/info \
--libdir=/usr/lib${LIBDIRSUFFIX} \
--sysconfdir=/etc \
--disable-maintainer-mode \
--with-gtkver=2 \
--disable-static \
--localstatedir=/var"

