#ABUILD created by/создан: NK, nk-man at yandex.ru 
#----------------------------- General vars --------------------------------------
#------------------------- Основные переменные -----------------------------------
pkgname=kde-about-distro
pkgver=1.0.0
pkgbuild=1
arch=('auto')

shortdesc="KCM displaying distribution and system information"
#longdesc=(""
#)

source=("http://download.kde.org/stable/about-distro/${pkgver}/src/about-distro-${pkgver}.tar.xz")
#source=("git:git://anongit.kde.org/about-distro")

patch_opts=("")

#----------------------------- AgiliaLinux vars --------------------------------------
#--------------------- Специфичные для AgiliaLinux ------------------------------
#short and long tags / длинный и короткий тег
tags="kde4 kde-misc"

#dependencies only needed to build package
build_deps=""

provides=""
conflicts=""

adddep=""
removedep=""

#for multi pkg abuild
pkglist=

#Set number of jobs while compliling, otherwise it'll be autodetected
#numjobs=1

#additional files should be copied into ${pkgdir}/usr/doc/${pkgname}-${pkgver} dir from sources
docs=
gendeps_blacklist=

#custom_opts: skip_validate skip_gendeps no_postperm no_strip no_ccache
custom_opts=""

#----------------------------- Make PKG --------------------------------------
#-------------------------- Сборка пакета ------------------------------------

#ran before function build()
#запускается перед сборкой.
before_build()
{
go_src_dir
#if [[ ! -z "`sed -n '27p' ${srcdir}/Module/src | grep 'exit 1'`" ]]; then
sed -i -e '115,120d' ./src/Module.cpp || exit 1
}

BUILD_SYSTEM="cmake"
BUILD_KEYS="-DCMAKE_INSTALL_PREFIX=/usr \
-DCMAKE_BUILD_TYPE=RELEASE \
-DLIB_DIR=lib${LIBDIRSUFFIX} \
-DLIB_SUFFIX=${LIBDIRSUFFIX} \
../"

#ran after function build() 
#после сборки
after_build()
{
if [[ ! -d $pkgdir/usr/share/config/ ]]; then
mkdir -p $pkgdir/usr/share/config
cat << EOF >> $pkgdir/usr/share/config/kcm-about-distrorc
[General]
Name=Agilia Linux
Website=http://agilialinux.org/
EOF
fi
}
